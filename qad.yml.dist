version: "1.0"
jobs:
  fmt:
    script: [ cargo fmt ]
  clippy:
    script: [ cargo clippy --tests --color always ]
  tests:
    script: [ cargo test --color always ]
constraints:
  blocks:
    fmt: [ clippy, tests]
  needs:
display:
  spinner:
    frames: [ ".  ", ".. ", "...", ".. ", ".  " ]
    per_frames: 80
